<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="info" >
    <Appenders>
        <Console name="STDOUT">
            <PatternLayout pattern="%m MDC%X%n"/>
        </Console>
        <File name="File" fileName="target/test.log">
            <PatternLayout>
                <pattern>%d %p %C{1.} [%t] %m%n</pattern>
            </PatternLayout>
        </File>
    </Appenders>

    <Loggers>

        <Root level="error">
            <AppenderRef ref="STDOUT"/>
            <AppenderRef  ref="File"/>
        </Root>
    </Loggers>

</Configuration>