<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.ks4pl.oasvr.mapper.ContractListItemMapper">

    <resultMap id="BaseResultMap" type="com.ks4pl.oasvr.model.ContractListItem">
        <result property="name" column="name" />
        <result property="issueDate" column="issueDate"/>
        <result property="state" column="state"/>
        <result property="operatorName" column="operator"/>
        <result property="operatorId" column="uid"/>
        <result property="operateTime" column="operateTime"/>
    </resultMap>

    <select id="selectByCondition" parameterType="Map" resultMap="BaseResultMap">
        SELECT c.name, c.issueDate, c.state, c.operateTime, u.name operator, u.id uid
        FROM contract c, user u
        <where>
            u.id = c.operatorId
            <if test="name!=null and name!=''">
                AND c.name LIKE  concat('%', #{name}, '%')
            </if>
            <if test="startDate != null and startDate!=''">
                AND c.issueDate &gt;= #{startDate}
            </if>
            <if test="endDate != null and endDate!=''">
                AND c.issueDate &lt;= #{endDate}
            </if>
            <if test="state != null and state!=''">
                And c.state=#{state}
            </if>
        </where>
        ORDER by c.issueDate DESC
    </select>

    <select id="total" parameterType="Map" resultType="Integer">
    SELECT count(c.id)  FROM contract c, user u
    <where>
        u.id = c.operatorId
        <if test="name!=null and name!=''">
            AND c.name LIKE  concat('%', #{name}, '%')
        </if>
        <if test="startDate != null and startDate!=''">
            AND c.issueDate &gt;= #{startDate}
        </if>
        <if test="endDate != null and endDate!=''">
            AND c.issueDate &lt;= #{endDate}
        </if>
        <if test="state != null and state!=''">
            And c.state=#{state}
        </if>
    </where>
    </select>
</mapper>
