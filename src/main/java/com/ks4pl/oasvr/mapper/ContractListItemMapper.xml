<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.ks4pl.oasvr.mapper.ContractListItemMapper">

    <resultMap id="BaseResultMap" type="com.ks4pl.oasvr.model.ContractListItem">
        <result property="name" column="name" />
        <result property="issueDate" column="issueDate"/>
        <result property="state" column="state"/>
        <result property="operatorName" column="operator"/>
        <result property="operatorId" column="uid"/>
        <result property="operateTime" column="operateTime"/>
    </resultMap>

    <select id="selectByCondition" parameterType="Map" resultMap="BaseResultMap">
        SELECT p.name, p.issueDate, p.state, p.operateTime, u.name operator, u.id uid
        FROM contract p, user u
        <where>
            u.id = p.operatorId
            <if test="name!=null">
                AND p.name LIKE  concat('%', #{name}, '%')
            </if>
            <if test="startDate != null">
                AND p.issueDate &gt;= #{startDate}
            </if>
            <if test="endDate != null">
                AND p.issueDate &lt;= #{endDate}
            </if>
            <if test="state != null">
                And p.state=#{state}
            </if>
        </where>
        ORDER by p.issueDate DESC
    </select>
</mapper>
